package Day3;

public class StringMethod {

	public static void main(String[] args) {
String S="Welcome";
String S1="To Company";
System.out.println(S.length());//length of a string
System.out.println(S.concat(S1));//Concat of  2 string
S="   welcome       ";
System.out.println(S);//before triming
System.out.println(S.trim());//it removes the spaces of left and right side

//charAt() method
S="Welcome";
System.out.println(S.charAt(2));//returns charchter based on index value

//comparing string equals()

S="Welcome";
System.out.println(S.equals("Welcome"));//true
System.out.println(S.equals("Welcome"));//true
System.out.println(S.equals("Wel come"));//false



System.out.println(S.equalsIgnoreCase("WeLcome"));//it ignores the case level only check the character
//replacing character
S="Welcome to java";
System.out.println(S.replace('o', 'a'));
System.out.println(S.replace("java","Python"));//replace sequence of character

//extracting substring from the main string
S="Welcome";
System.out.println(S.substring(0,4));


	}
	

}
